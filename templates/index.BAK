{% extends "layout.html" %}
{% block body %}
<body role="document">
<div class="container bs-docs-container">
<div class="col-lg-8 col-md-12">
<h1>Estimate Instagram user gender</h1>
<form method="post" action="/">
    <div class="col-lg-6">
	    <input type="text" class="form-control" name="message" placeholder="please input 'Instagram user name'">
    </div>
	<input type="submit" value="Send" class="btn btn-primary">
</form>

{% if method == "POST" %}
    <div class="col-lg-12">
    <h1>{{ massage }}</h1>
    {% if message == "Your Instagram data" %}
    <div class="pull-left">
        <h2>User Name : {{ userinfo['user_name'] }}</h2>
        <h2>Estimated :
            {% if result == 1 %}
                <mark>male</mark>
            {% else %}
                <mark>female</mark>
            {% endif %}
        </h2>
    </div>
    <div class="pull-right">
               <img src = "{{ userinfo['image'] }}" alt="profile image">
    </div>
    <div class="col-md-12">
    <h2>Your features : </h2>
    <div class="col-md-12">
    <table class="table">
        <thead>
            <tr>
                <th>Tag name</th>
                <th>Score</th>
            </tr>
        </thead>
        <tbody>
    {% for info in userinfo %}
        {% if info == "user_id" %}
        {% elif info == "user_name" %}
        {% elif info == "image" %}
        {% else %}
            <tr>
                <td>{{ info }}</td>
                <td>{{ userinfo[info] }}</td>
            </tr>
        {% endif %}
	{% endfor %}
        </tbody>
    </table>
	</div>
    {% endif %}
    </div>
{% endif %}
</div>
</div>
</div>
</body>
{% endblock %}
